<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.ecommerce.controller.RegisterController">
    <VBox alignment="CENTER" spacing="10.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Label text="Register" style="-fx-font-size: 24px;" />
        <TextField fx:id="usernameField" promptText="Username"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"/>
        <Button text="Register" onAction="#handleRegister"/>
        <Hyperlink text="Already have an account? Login" onAction="#goToLogin"/>
    </VBox>
</AnchorPane>
